<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:columnCount="4"
    android:orientation="horizontal"
    android:rowCount="6"
    >
    <EditText
        android:id="@+id/editText1"
        android:layout_width="match_parent"
        android:layout_column="0"
        android:layout_columnSpan="4"
        android:layout_gravity="center_horizontal|top"
        android:layout_row="1"
        android:layout_height="123dp"
        />
    <Button
        android:id="@+id/AC"
        android:text="AC"
        android:width="95dp"
        android:textSize="20dp"
        android:layout_height="73dp"
        android:layoute_gravity="fill"
        />
    <Button
        android:id="@+id/jiajian"
        android:text="+/-"
        android:textSize="20dp"
        android:width="95dp"
        android:layout_height="73dp"
        android:layoute_gravity="fill"
        />
    <Button
        android:id="@+id/baifen"
        android:text="%"
        android:textSize="20dp"
        android:width="95dp"
        android:layout_height="73dp"
        android:layoute_gravity="fill"
        />
    <Button
        android:id="@+id/dot"
        android:text="."
        android:textSize="20dp"
        android:width="95dp"
        android:layout_height="73dp"
        android:layoute_gravity="fill"
        />
    <Button
        android:id="@+id/zero"
        android:text="0"
        android:textSize="20dp"
        android:width="95dp"
        android:layout_height="73dp"
        android:layoute_gravity="fill"
        />
    <Button
        android:id="@+id/one"
        android:text="1"
        android:textSize="20dp"
        android:width="95dp"
        android:layout_height="73dp"
        android:layoute_gravity="fill"
        />
    <Button
        android:id="@+id/two"
        android:text="2"
        android:textSize="20dp"
        android:width="95dp"
        android:layout_height="73dp"
        android:layoute_gravity="fill"
        />
    <Button
        android:id="@+id/three"
        android:text="3"
        android:textSize="20dp"
        android:width="95dp"
        android:layout_height="73dp"
        android:layoute_gravity="fill"
        />
    <Button
        android:id="@+id/four"
        android:text="4"
        android:textSize="20dp"
        android:width="95dp"
        android:layout_height="73dp"
        android:layoute_gravity="fill"
        />
    <Button
        android:id="@+id/five"
        android:text="5"
        android:textSize="20dp"
        android:width="95dp"
        android:layout_height="73dp"
        android:layoute_gravity="fill"
        />
    <Button
        android:id="@+id/six"
        android:text="6"
        android:textSize="20dp"
        android:width="95dp"
        android:layout_height="73dp"
        android:layoute_gravity="fill"
        />
    <Button
        android:id="@+id/seven"
        android:text="7"
        android:textSize="20dp"
        android:width="95dp"
        android:layout_height="73dp"
        android:layoute_gravity="fill"
        />
    <Button
        android:id="@+id/eight"
        android:layoute_gravity="fill"
        android:text="8"
        android:textSize="20dp"
        android:width="95dp"
        android:layout_height="73dp"
        />
    <Button
        android:id="@+id/nine"
        android:layoute_gravity="fill"
        android:text="9"
        android:textSize="20dp"
        android:width="95dp"
        android:layout_height="73dp"
        />
    <Button
        android:id="@+id/equal"
        android:text="="
        android:layoute_gravity="fill"
        android:layout_columnSpan="2"
        android:textSize="20dp"
        android:layout_height="73dp"
        android:layout_width="95dp"
        />

</GridLayout>
